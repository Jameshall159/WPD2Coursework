{{>homeNav}}

<header class="bg-primary text-white">
    <div class="container text-center">
        <h1 style="font-size:40px;">Group Milestone Tracker</h1>
        <p class="lead" style="font-size:30px;">Welcome to your group milestone tracker.</p>
    </div>
</header>

<style>
header {
  padding: 154px 0 100px;
}
header.bg-primary{
background-image: url(images/3.jpg);
}

@media (min-width: 992px) {
  header {
    padding: 156px 0 100px;
  }
}

section {
  padding: 150px 0;
}
    </style>



<body style="background-color:white;">

<div class="container text-center" style="padding-top: 20px">
    <div class="page-header">
    </div>
    {{^messages}}
        <h3>There are no milestones. <a href="/addMilestone" class="href">Click to add now!</a></h3>
    {{/messages}}

    {{#messages}}
        <ul class="timeline" style="margin-top:60px;">

            <li>
                <div class="timeline-badge" style="background-color:#474e5d;"><i class="glyphicon glyphicon-check"></i></div>
                <div class="timeline-panel">
                    <div class="timeline-heading">

                        <h4 class="timeline-title">{{message}}</h4>
                        <p><small class="text-muted"><i class="glyphicon glyphicon-time"></i>By: <strong>{{user}} </strong>
                            <br>Expected to complete: <strong>{{expectedComplete}}</strong></small></p>

                    </div>
                    <div class="timeline-body">

                        <p>{{description}}</p>
                        <hr>
                        <div class="col-auto">
                            <label class="sr-only" for="inlineFormInputGroup">Share Link</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text" onclick="myFunction()">Copy Link</div>
                                </div>
                                <input type="text" class="form-control" id="link" value="localhost:8080/sharedmilestone/{{link}}" readonly>
                            </div>

                    </div>
                </div>
            </li>

        </ul>
    {{/messages}}

    <div id="snackbar">Milestone Link Copied</div>

</div>





<style>

.btn-circle.btn-lg {
  width: 50px;
  height: 50px;
  padding: 10px 16px;
  font-size: 18px;
