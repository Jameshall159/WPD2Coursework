{{> db_header}}
<div class="background" style="background-image: url('images/bg4.jpg'); background-repeat: no-repeat; background-size: cover; width:100%; height:500px; background-position: center;">
    <form class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal" style="height:50px; color:white; margin-top:60px;">Milestone Tracker</h1>
        <label for="inputEmail" class="sr-only" style="">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" style="margin-bottom:15px;" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" style="margin-bottom:15px;" required>
        <div class="checkbox mb-3" style="color:white;">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" style="background-color:white; color:black;">Sign in</button>
    </form>

{{> users}}